{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src/app",
        "outDir": "./out-tsc/app",
        "types": [],
        "paths": {
            "@app/*": ["./*"],
            "@modules/*": ["./modules/*"],
            "@pages/*": ["./pages/*"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}
